@{
    ViewBag.Title = "Login";
}

@section styles{
    <link href="~/Content/Login/login.css" rel="stylesheet" />
    }

<div class="row" ng-app="Auth">
    <div class="col-sm-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <strong>Login Wizard</strong>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" name="loginForm" ng-controller="AuthController" ng-submit="login()" 
                      id="loginForm">
                    <br /><br />
                    <div class="form-group">
                        <label class="control-label col-sm-4">Username</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="Username" ng-model="User.username" 
                                   validator="[required]" id="Username" placeholder="Enter Username" />
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="control-label col-sm-4">Password</label>
                        <div class="col-sm-6">
                            <input type="password" class="form-control" name="Password" ng-model="User.password" 
                                   validator="[required]" id="Password" placeholder="Enter Password" />
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-2">
                            <input type="submit" class="btn btn-success btn-block" value="Login" />
                        </div>
                    </div>
                </form>
            </div>

            <div class="panel-footer"></div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/App/Auth/AuthController.js"></script>
    }